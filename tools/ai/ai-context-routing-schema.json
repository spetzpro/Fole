{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AI Context Routing Schema",
  "type": "object",
  "required": ["version", "lastUpdated", "routingRules"],
  "properties": {
    "version": {
      "type": "string"
    },
    "lastUpdated": {
      "type": "string"
    },
    "routingRules": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "pathPrefix", "requiredDocs"],
        "properties": {
          "id": {
            "type": "string"
          },
          "pathPrefix": {
            "type": "string"
          },
          "requiredDocs": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "notes": {
            "type": "string"
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
