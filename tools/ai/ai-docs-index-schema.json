{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AI Docs Index Schema",
  "type": "object",
  "required": ["documentVersion", "lastUpdated", "documents"],
  "properties": {
    "documentVersion": {
      "type": "string"
    },
    "lastUpdated": {
      "type": "string"
    },
    "documents": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "path", "type", "required"],
        "properties": {
          "id": {
            "type": "string"
          },
          "path": {
            "type": "string"
          },
          "type": {
            "type": "string"
          },
          "required": {
            "type": "boolean"
          },
          "description": {
            "type": "string"
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
