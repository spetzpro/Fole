{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "blockType": { "const": "feature.group" },
    "id": { 
      "type": "string",
      "pattern": "^[a-z0-9.]+$"
    },
    "title": { "type": "string" },
    "description": { "type": "string" },
    "tags": { 
      "type": "array",
      "items": { "type": "string" }
    }
  },
  "required": ["blockType", "id", "title"],
  "additionalProperties": false
}
