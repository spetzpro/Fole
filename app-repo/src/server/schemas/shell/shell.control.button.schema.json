{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "label": { "type": "string" },
        "icon": { "type": "string" },
        "tooltip": { "type": "string" },
        "variant": { "type": "string", "enum": ["primary", "secondary", "ghost", "danger"] },
        "disabled": { "type": "boolean" },
        "visibleWhen": { "$ref": "https://fole.example/schemas/shell/expression-ast.schema.json" },
        "enabledWhen": { "$ref": "https://fole.example/schemas/shell/expression-ast.schema.json" },
        "interactions": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "click": { "$ref": "action-descriptor.schema.json#/definitions/actionDescriptor" },
                "long-press": { "$ref": "action-descriptor.schema.json#/definitions/actionDescriptor" },
                "context-menu": { "$ref": "action-descriptor.schema.json#/definitions/actionDescriptor" },
                "drag": {
                    "type": "object",
                    "additionalProperties": false,
                    "required": ["dragStart"],
                    "properties": {
                        "dragStart": { "$ref": "action-descriptor.schema.json#/definitions/actionDescriptor" },
                        "onDrop": { "$ref": "action-descriptor.schema.json#/definitions/actionDescriptor" }
                    }
                }
            }
        }
    },
    "required": ["label"]
}
