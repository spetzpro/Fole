{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "minWidth": { "type": "number", "minimum": 0 },
        "maxWidth": { "type": "number", "minimum": 0 },
        "allowZoom": { "type": "boolean" },
        "breakpoints": {
            "type": "object",
            "properties": {
                "mobile": { "type": "number" },
                "tablet": { "type": "number" },
                "desktop": { "type": "number" }
            }
        }
    },
    "required": ["allowZoom"]
}
