{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://fole.example/schemas/shell/binding-block.data.schema.json",
    "type": "object",
    "title": "Binding Block Data",
    "required": [
        "mode",
        "endpoints",
        "mapping",
        "enabled"
    ],
    "additionalProperties": false,
    "properties": {
        "mode": {
            "type": "string",
            "enum": [
                "derived",
                "triggered"
            ]
        },
        "enabled": {
            "type": "boolean"
        },
        "endpoints": {
            "type": "array",
            "minItems": 2,
            "maxItems": 20,
            "items": {
                "type": "object",
                "required": [
                    "endpointId",
                    "target",
                    "direction"
                ],
                "additionalProperties": false,
                "properties": {
                    "endpointId": {
                        "type": "string",
                        "minLength": 1
                    },
                    "target": {
                        "type": "object",
                        "additionalProperties": false,
                        "required": [
                            "blockId",
                            "path"
                        ],
                        "properties": {
                            "blockId": {
                                "type": "string",
                                "minLength": 1
                            },
                            "path": {
                                "type": "string",
                                "minLength": 1
                            }
                        }
                    },
                    "direction": {
                        "type": "string",
                        "enum": [
                            "in",
                            "out",
                            "inout"
                        ]
                    }
                }
            }
        },
        "mapping": {
            "type": "object",
            "description": "Definition of the data transformation or event flow",
            "required": [],
            "additionalProperties": true
        },
        "accessPolicy": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "roles": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "anonymous": {
                    "type": "boolean"
                },
                "expr": {
                    "$ref": "https://fole.example/schemas/shell/expression-ast.schema.json"
                }
            }
        }
    }
}
